{
  "name": "@r3e/neo-n3-mcp",
  "version": "1.1.0",
  "description": "MCP server for Neo N3 blockchain integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:simple": "node tests/run-simple-test.js",
    "test:network": "node tests/run-network-test.js",
    "test:tx-status": "node tests/run-tx-status-test.js",
    "example": "node examples/run-example.js",
    "add-to-mcp": "node scripts/add-to-mcp-settings.js",
    "postinstall": "node -e \"try { require('fs').mkdirSync('wallets', { recursive: true }); } catch (e) { if (e.code !== 'EEXIST') throw e; }\"",
    "prepublishOnly": "npm run build",
    "publish:npm": "npm publish --access public",
    "publish:docker": "docker build -t r3e/neo-n3-mcp:latest .",
    "publish:docker:local": "node scripts/build-local-image.js",
    "publish:all": "npm run publish:npm && npm run publish:docker"
  },
  "bin": {
    "neo-n3-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "API.md",
    "TESTING.md",
    "DEPLOYMENT.md",
    "ARCHITECTURE.md",
    "NETWORKS.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "neo",
    "blockchain",
    "mcp",
    "n3",
    "modelcontextprotocol"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.15.11",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@cityofzion/neon-js": "^5.3.0",
    "@modelcontextprotocol/sdk": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
